<div id="search-usercare" v-cloak>

<div class="container">
    <div class="display-3"><%=__(`UserCare`)%></div>
   <em class="text-muted"><%=__('Find the user you want to take care of and click over [+] button')%></em>
    <hr>

   <div class="btn-group">
     <a href="/" class="btn btn-lg btn-primary"><%=__('Cancel')%></a>
   </div>

    <table class="table table-striped mt-2">
        <caption><%=__(`Total`)%>: <%=users.length%></caption>
        <thead>
            <tr>
                <th id="1"></th>
                <th id="2"><%=__('Full Name')%></th>
                <th id="3"><%=__('Email Address')%></th>
                <th id="4"><%=__('Records')%></th>
            </tr>
        </thead>
        <tbody>
        <tr v-for="user in users">
            <td headers="1">
                <a :href="'/usercare/edit-usercare/new/'+user.id" class="btn btn-lg btn-primary"><em class="fa fa-2x fa-plus"></em></a>
            </td>
            <td headers="2">{{user.fullName}}</td>
            <td headers="3">{{user.emailAddress}}</td>
            <td headers="4">
                <ul class="list-group">
                    <li class="list-group-item" v-for="usercare in user.userCares">
                        <a :href="'/usercare/edit-usercare/'+usercare.id+'/edit'" class="btn btn-sm btn-primary">
                          <em class="fa fa-eye"></em>
                        </a>
                      <strong><js-timestamp :at="usercare.createdAt" short="true"></js-timestamp></strong>:
                       {{usercare.record}}
                    </li>
                </ul>
            </td>

        </tr>

        </tbody>
    </table>
</div>


</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
