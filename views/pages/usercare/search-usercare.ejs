<div id="search-usercare" v-cloak>

<div class="container">
    <div class="display-3"><%=__(`UserCare`)%></div>
    <hr>

    <table class="table table-striped mt-2">
        <caption><%=__(`Total`)%>: <%=users.length%></caption>
        <thead>
            <tr>
                <th id="1"></th>
                <th id="2"></th>
                <th id="3"></th>
                <th id="4"></th>
            </tr>
        </thead>
        <tbody>
        <tr v-for="user in users">
            <td headers="1">
                <a :href="'/usercare/edit-usercare/new/'+user.id" class="btn btn-sm btn-primary"><em class="fa fa-plus"></em></a>
            </td>
            <td headers="2">{{user.fullName}}</td>
            <td headers="3">{{user.emailAddress}}</td>
            <td headers="4">
                <ul class="list-group">
                    <li class="list-group-item" v-for="usercare in user.userCares">
                        <a :href="'/usercare/edit-usercare/'+usercare.id+'/edit'" class="btn btn-sm btn-primary"><em class="fa fa-eye"></em></a>
                    </li>
                </ul>
            </td>

        </tr>

        </tbody>
    </table>
</div>


</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
