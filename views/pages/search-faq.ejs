<div id="search-faq" v-cloak>

<div class="container">
    <div class="display-3"><%=__('Search Faq')%></div>
    <hr>
    <div class="btn-group mt-2">
        <a href="/edit-faq/new" class="btn btn-lg btn-primary m-1"><%=__('Create New')%></a>
        <a href="/search-faq" class="btn btn-lg btn-primary m-1"><%=__('Cancel')%></a>
    </div>

   <table class="table table-striped">
       <tr>
           <th id="0"></th>
           <th id="1"><%=__('Language')%></th>
           <th id="2"><%=__('Question')%></th>
           <th id="3"><%=__('Answer')%></th>
       </tr>

       <tr v-for="faq in faqs">
           <td headers="0">
                <a :href="'/edit-faq/'+faq.id" class="btn btn-danger m-1" > <em class="fa fa-edit"></em> </a>
           </td>
           <td headers="1">{{faq.lang}}</td>
           <td headers="2">{{faq.question}}</td>
           <td headers="3">{{faq.answer}}</td>
       </tr>
   </table>

</div>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
