<div id="search-guideline" v-cloak class="container">

<div class="display-3"><%=__('Search Guideline')%></div>
<hr>
<div class="btn-group">
  <a href="/guideline/edit-guideline/new" class="btn btn-primary m-1"><%=__('Create New')%></a>
  <a href="/" class="btn btn-primary m-1"><%=__('Cancel')%></a>
</div>

<table class="table table-striped">
  <caption>Total: {{ guidelines.length }}</caption>
  <thead>
  <tr>
    <th id="1"></th>
    <th id="2"><%=__('Title')%></th>
    <th id="3"><%=__('Text')%></th>
    <th id="4"><%=__('To')%></th>
  </tr>
  </thead>
  <tbody>
  <tr v-for="guideline in guidelines">
    <td headers="1">
      <a :href="'/guideline/edit-guideline/'+guideline.id" class="btn btn-primary">
        <em class="fa fa-pencil"></em>
      </a>
    </td>
    <td headers="2">{{guideline.title}}</td>
    <td headers="3">{{guideline.text}}</td>
    <td headers="4">{{guideline.tos.length}}</td>
  </tr>
  </tbody>
</table>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
