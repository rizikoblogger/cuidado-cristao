    <hr>

    <message id="msg" v-on:close="cleanMessage()" :severity="message.severity" :summary="message.summary"
      :details="message.details"></message>

    <div class="container">

      <label for="title">
        <%=__('Title')%>
      </label>
      <input type="text" class="form-control" id="title" v-model="sermon.titulo" minlength="3" maxlength="50" required
        placeholder="<%=__('Title for Sermon')%>">

      <label for="comentario">
        <%=__('Comment')%>
      </label>
      <input type="text" class="form-control" id="comentario" v-model="sermon.comentario" minlength="3" maxlength="200"
        required placeholder="<%=__('Full comment or description')%>">

      <label for="videourl">
        <%=__('Video URL') %>
      </label>
      <input type="url" class="form-control" id="videourl" v-model="sermon.videoUrl" minlength="5" maxlength="100"
        required placeholder="<%=__('https://www.youtube.com/embed/')%>">

      <label for="church">
        <%=__(`Church`)%>
      </label>

      <span class="form-control" id="church" v-if="sermon.church.shortName">{{sermon.church.shortName}} -
        {{sermon.church.fullName}}</span>

      <span class="form-control" id="church" v-else>
        <%= __("Choose a Church") %>
      </span>

      <label for="churchs">
      </label>
      <ul class="list-group" id="churchs">
        <em class="text-muted">
          <%=__('Click to select')%>
        </em>
        <li class="list-group-item" v-for="church in churchs">
          <button class="btn btn-primary m-1" title="<%=__(`Select`)%>" @click="selectChurch(church)"><em
              class="fa fa-plus"></em> </button>
          {{church.shortName}} - {{church.fullName}}
        </li>
      </ul>

      <div class="btn-group mt-2">
        <button class="btn btn-success m-1" @click="save(sermon)">
          <span class="fa fa-save pe-2"></span>
          <%= __('Save') %>
        </button>
      </div>
    </div>

