  <div class="container-fluid px-5">

    <div class="d-flex justify-content-between">

      <div class="d-flex align-self-center">
        <h3 v-if="sermon.id">
          <%= __("Update") %>
            <%= __("Sermon") %>
        </h3>

        <h3 v-else>
          <%= __("Create") %>
            <%= __("Sermon") %>
        </h3>

        <a class="btn btn-light ms-2" @click="cancel()">
          <%= __('Go Back'); %>
            <span class="fa fa-arrow-left"></span>
        </a>
      </div>

